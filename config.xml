<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.ryanw.barcodescanner"
        version   = "2.0.0">
    <name>PnP</name>

    <description>
        Scan and Find details.
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        PhoneGap Team
    </author>

    <gap:plugin name="com.phonegap.plugins.barcodescanner"/>
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="debug-server" required="true">
       <param name="domain" value="http://debug.phonegap.com"/>
       <param name="key" value="willoughby"/>
    </feature>

    <preference name="phonegap-version" value="2.9.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />

    <icon src="" />
    <icon src="res/icon/android/mainicon.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/android/mainicon.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/android/mainicon.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/android/mainicon.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon/blackberry/mainicon.png"     gap:platform="blackberry" />
    <icon src="res/icon/blackberry/mainicon.png"     gap:platform="blackberry" gap:state="hover"/>
    <icon src="res/icon/ios/mainicon.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="res/icon/ios/mainicon.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="res/icon/ios/mainicon.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="res/icon/ios/mainicon.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="res/icon/webos/mainicon.png"          gap:platform="webos" />
    <icon src="res/icon/windows-phone/mainicon.png"  gap:platform="winphone" />
    <icon src="res/icon/windows-phone/mainicon.png" gap:platform="winphone"   gap:role="background" />

    <gap:splash src="res/screen/android/mainic.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/mainic.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/mainic.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/mainic.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res/screen/blackberry/mainic.png"         gap:platform="blackberry" />
    <gap:splash src="res/screen/ios/mainic.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/ios/mainic.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/ios/mainic.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/ios/mainic.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="res/screen/windows-phone/mainic.jpg" gap:platform="winphone" />

    <!-- content src="http://www.w3.org/2010/05/video/mediaevents.html" / -->
</widget>
